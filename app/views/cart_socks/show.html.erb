<div class="container" id="cart-spaces">
  <div class="row cart-sock">
  <% @spaces.each do |space| %>
  <div class="col-md-4 col-sm-6">
      <%= image_tag sock.image_url.url(:thumb) %>
      <h3><%= link_to sock.name.capitalize, space_path(space) %></h3>
      <p><%= sock.price %>,
      <%= space.foot %>,
      <%= space.planet.name %>,
      <%= space.style.name %></p>
      Quantity: <%= @cart.count_of(sock.id) %>
      <div class="quantity-button">
        <%= button_to "-", cart_sock_path(sock, direction: "minus"), method: :patch, class: "btn btn-custom btn-person" %><%= button_to "+", cart_sock_path(sock, direction: "plus"), method: :patch, class: "btn btn-custom btn-person" %>
        <%= button_to "Remove", cart_sock_path(sock), method: :delete, class: "btn btn-custom btn-person" %>
      </div>
    </div>
  <% end %>
</div>
  <div id="total-cart-price">
    <h4>Total Items in Cart: <%= @cart.total %></h4>
    <h4>Cart Total: <%= number_to_currency(@cart.total_price) %></h4>
    <div class="quantity-button">
      <%= checkout_option %>
      <%= button_to "Keep Shopping", spaces_path, method: :get, class: "btn btn-custom btn-person" %>
    </div>
  </div>
</div>
